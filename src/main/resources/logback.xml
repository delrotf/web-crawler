<configuration>
    <!-- Default environment when ENVIRONMENT is not defined in system properties. -->
    <property name="ENVIRONMENT" value="development" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>2</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%throwable{full}</pattern>
        </encoder>
    </appender>

    <!-- Development environment -->
    <if condition='property("ENVIRONMENT").equals("development")'>
        <then>
            <root level="DEBUG">
                <appender-ref ref="CONSOLE" />
                <appender-ref ref="FILE" />
            </root>
        </then>
    </if>

    <!-- Production environment -->
    <if condition='property("ENVIRONMENT").equals("production")'>
        <then>
            <root level="INFO">
                <appender-ref ref="FILE" />
            </root>
        </then>
    </if>

<!--    <root level="debug">-->
<!--        <appender-ref ref="CONSOLE"/>-->
<!--        <appender-ref ref="FILE"/>-->
<!--    </root>-->
</configuration>
